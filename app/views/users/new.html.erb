<div class="container">
	<div class="row">
		<h1>Login</h1>
		<p class="error"><%= flash[:login_error] %></p>
		<form class="col s12 " action="/sessions" method="post">
			<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">
			<div class="row">
	      		<div class="input-field col s6 l4">
	      		  <i class="material-icons prefix">account_circle</i>
		          <label for="login-email">Email</label>
		          <input id="login-email" type="text" name="login[email]" class="validate">
		        </div>
		        <div class="input-field col s6 l4">
	      		  <i class="material-icons prefix">account_circle</i>
		          <label for="password_login">Password</label>
		          <input id="password_login" type="text" name="login[password]" class="validate">
		        </div>		   
	      	</div>
	      	<div class="row">
	      		<div class="col l8 right-align">
		        	<button class="btn waves-effect waves-light" type="submit" >Login<i class="material-icons right">send</i>
		  			</button>
	  			</div>
	      	</div>
		</form>
	</div>

	<div class="row">
		<div>
			<% if flash[:registration_errors] %>
				<% flash[:registration_errors].each do |error| %>
					<p class="error"><%= error %></p>
				<% end %>
			<% end %>
		</div>

		<h1>Registration</h1>
		<form class="col s12 " action="/users" method="post">
			<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">
			<div class="row ">
		        <div class="input-field col s4">
		          <i class="material-icons prefix">account_circle</i>
		          <label for="first_name">First Name</label>
		          <input id="first_name" type="text" name="user[first_name]" class="validate">

		        </div>
		        <div class="input-field col s4">
		          <i class="material-icons prefix">account_circle</i>
		          <label for="last_name">Last Name</label>
		          <input id="last_name" name="user[last_name]" type="text" class="validate">
		        </div>
	      	</div>
	      	<div class="row">
	      		<div class="input-field col s4">
	      		  <i class="material-icons prefix">account_circle</i>
		          <label for="email" data-error="wrong" data-success="right">Email</label>
		          <input id="email" type="text" name="user[email]" class="validate">
		        </div>
	      	</div>
	      	<div class="row">
	      		<div class="input-field col s4">
	      		  <i class="material-icons prefix">account_circle</i>
		          <label for="password">Password</label>
		          <input id="password" type="text" name="user[password]" class="validate">
		        </div>
		        <div class="input-field col s4">
	      		  <i class="material-icons prefix">account_circle</i>
		          <label for="Confirm-password">Confirm Password</label>
		          <input id="Confirm-password" type="text" name="user[password_confirmation]" class="validate">
		        </div>
	      	</div>

	      	<div class="row">
	        	<div class="col l8 right-align">
		        	<button class="btn waves-effect waves-light" type="submit" >Submit<i class="material-icons right">send</i>
		  			</button>
	  			</div>
	        </div>
		</form>

	</div>

</div>