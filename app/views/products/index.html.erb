<div class="container">

	<div class="row">
		<table  class="bordered">
			<tr>
				<th>Pdoduct</th>
				<th>Seller</th>
				<th>Date Posted</th>
				<th>Amount</th>
				<th>Action</th>
			</tr>
			<% @products.each do |product| %>
				<tr>
					<td><%= product.name%></td>
					<td><%= product.user.first_name%></td>
					<td><%= product.created_at%></td>
					<td><%= product.amount%></td>
					<td><a href="/purchases/<%= product.id %>">Buy</a></td>
				</tr>
			<% end %>			
		</table>
	</div>	
</div>