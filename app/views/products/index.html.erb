    <div class="nav-wrapper">
      <a href="#" class="brand-logo">Hi <%= @current_user.first_name%></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/sessions/<%= session[:user_id] %>" data-method="delete">Logout</a></li>
